{{ header }}
<div id="account-order" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-8' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-10' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      
      {# {% if orders %} #}
      <div class="shadow">
        <h1 class="h3">{{ heading_title }}</h1>
        <div class="table-responsive">
          <table class="table">

                <thead>
                  <tr>
                    <th class="text-uppercase text-center v-align-middle">{{ column_order_id }}</th>
                    <th class="text-uppercase text-center v-align-middle">{{ column_date_added }}</th>
                    <th class="text-uppercase text-center v-align-middle">{{ column_product }}</th>
                    <th class="text-uppercase text-center v-align-middle">{{ column_status }}</th>
                    <th class="text-uppercase text-center v-align-middle">{{ column_comment }}</th>
                    <th class="text-uppercase text-center v-align-middle">{{ column_total }}</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                {% for order in orders %}
                  <tr>
                    <td class="text-center v-align-middle"><b>{{ order.order_ref }}</b></td>
                    <td class="text-center v-align-middle">{{ order.date_added }}</td>
                    <td class="text-center v-align-middle">{{ order.products }}</td>
                    <td class="text-center v-align-middle"><b>{{ order.status }}</b></td>
                    <td class="text-left v-align-middle">{{ order.comment }}</td>
                    <td class="text-center v-align-middle">{{ order.total }}</td>
                    <td class="text-right v-align-middle"><a href="{{ order.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-info"><i class="fa fa-eye"></i></a></td>
                  </tr>
                {% endfor %}
