{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="pull-right">
          <a href="{{ cancel }}" class="btn btn-default">{{ button_cancel }}</a>
          <a href="{{ modules }}" class="btn btn-primary">{{ button_modules }}</a>
        </div>
        <h1>{{ heading_title }}</h1>
      </div> 
      <div class="panel-body">
        <form action="{{ action }}" class="form-horizontal" method="post" enctype="multipart/form-data" id="form-extract">
          {% if (page == 'MODULES_EXTRACT') %} 
          <!-- Start Modules Extract Page -->
          <div class="table-responsive">			  
            <table class="table table-striped table-bordered table-hover">
              {% if (module_list) %} 
              <thead>
                <tr>
                  <td class="left" style="background-color: #FFFFFF;" colspan="5">
                    {% if (module_total) %} 
                    <em>{{ text_total }} {{ module_total }}</em>
                    {% endif %}       
                  </td>
                </tr>
                <tr>
                  <td class="left"><input type="checkbox" onclick="$('input[name*=\'module_list\']').attr('checked', this.checked);" /></td>
                  <td class="left">{{ text_module_name }}</td>
                  <td class="left">{{ text_module_size }}</td>
                  <td class="center">{{ text_module_date }}</td>
                </tr>
              </thead>
              {% for module in module_list %} 
              <tbody>
                <tr>
                  <td class="center" width="1%"><input name="module_list[]" type="checkbox" value="{{ module['file'] }}" /></td>
                  <td class="left"><a href="{{ module['link'] }}">{{ module['name'] }}</a></td>
                  <td class="left">{{ module['size' ] }}</td>
                  <td class="center">{{ module['date'] }}</td>
                </tr>
              </tbody>
              {% endfor %} 
              <tfoot>
                <tr>
                  <td class="center" colspan="5"><a class="button btn btn-danger" onclick="formSubmit('delete');" >{{ button_delete }}</a></td>
                </tr>
              </tfoot>
              {% else %} 
              <tr>
               <td class="center">{{ text_no_results }}</td>
              </tr>
              {% endif %} 
            </table>
          </div>
          <!-- End Modules Extract Page -->
          {% else %} 
          <!-- Start Main Page -->
          <div class="form-group form-inline">
            <div class="col-sm-3">
              <label class="control-label" for="input-search">{{ text_module_name }} <br>{{ example_module_name }}</label>
            </div>
            <div class="col-sm-9">
              <div class="input-group">
                <input type="text" class="form-control" id="input-search" name="module_name" value="{{ module_name }}" />
                <span class="input-group-btn">
                  <button class="btn btn-primary" type="button" onclick="formSubmit('search');"><i class="fa fa-search"></i> {{ text_search }}</button>
                </span>
              </div>
            </div>
          </div>
          
          {% if (module_total is defined) %} 
          <em>{{ text_total_search }} {{ module_total }}</em>
          {% endif %} 
          {% if (module_search) %} 
          <div class="table-responsive">			  
            <table class="table table-striped table-bordered table-hover">
               <thead>
                 <tr>
                   <td class="center" width="1%"><input type="checkbox" onclick="$('input[name*=\'module_search\']').attr('checked', this.checked);" /></td>
                   <td class="left" width="44%">{{ text_path_name }}</td>
                   <td class="left" width="45%">{{ text_file_name }}</td>
                 </tr>
               </thead>
               {% for modules in module_search %} 
               <tr class="filter">
                 <td class="left" colspan="3"><b style="text-transform:uppercase;">{{ modules['module'] }}&nbsp;&nbsp;&nbsp;({{ modules.files|length }})</b></td>
               </tr>
               {% for module in modules['files'] %} 
               <tr>
                 <td class="center"><input type="checkbox" name="module_search[]" value="{{ module['name'] }}" /></td>
                 <td class="left">{{ module['path'] }}</td>
                 <td class="left">{{ module['file'] }}</td>
               </tr>
               {% endfor %} 
               {% endfor %} 
               <tfoot>
                 <tr>
                   <td class="center" colspan="3">
                    {% if (module_total is defined and module_total) %} 
                     <a class="button btn btn-primary" onclick="formSubmit('extract');">{{ button_extract }}</a>
                    {% endif %} 
                   </td>
                 </tr>
               </tfoot>
            </table>
          </div>
          {% endif %} 
          <!-- End Main Page -->
          {% endif %} 
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
function formSubmit(action) {
    if (action == 'search') {
        $('#form-extract input[name*=\'module_search\']').attr('checked', false);
        $('#form-extract').submit();
    }
    if (action == 'extract') {
        var inputs = $('#form-extract input[name*=\'module_search\']:checked');
        if (inputs.length) {
            $('#form-extract').submit();
        } else {
            alert('{{ error_select_extract }}');
        }
    }
    if (action == 'delete') {
        var inputs = $('#form-extract input[name*=\'module_list\']:checked');
        if (inputs.length) {
            $('#form-extract').submit();
        } else {
            alert('{{ error_select_delete }}');
        }
    }
}
//--></script>
<script language="JavaScript" type="text/javascript">
$(document).ready(function(){
    setTimeout(function() {
        $('.success').hide('slow');
        $('.warning').hide('slow');
    }, 5000);
});
</script>
{{ footer }}