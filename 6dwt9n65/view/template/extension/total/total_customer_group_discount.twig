{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-total" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-total" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_discount }}">{{ entry_discount }}</span></label>
            <div class="col-sm-10">
            	<div class="form-vertical">
            		{% for key,group in customer_groups %} 
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-discount-{{ key }}">{{ group['name'] }}</label>
            			<div class="col-sm-10">
            				<input type="text" name="total_total_customer_group_discount_customer_group_id[{{ group['customer_group_id'] }}]" value="{{ group['discount'] }}" id="input-discount-{{ key }}" class="form-control"></td>
            			</div>
            		</div>
            		{% endfor %} 
            	</div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-special"><span data-toggle="tooltip" title="{{ help_special }}">{{ entry_special }}</span></label>
            <div class="col-sm-10">
              <select name="total_total_customer_group_discount_special" id="input-special" class="form-control">
                {% if total_total_customer_group_discount_special %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-tax"><span data-toggle="tooltip" title="{{ help_tax }}">{{ entry_tax }}</span></label>
            <div class="col-sm-10">
              <select name="total_total_customer_group_discount_tax" id="input-tax" class="form-control">
                {% if total_total_customer_group_discount_tax %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-show"><span data-toggle="tooltip" title="{{ help_show }}">{{ entry_show }}</span></label>
            <div class="col-sm-10">
              <select name="total_total_customer_group_discount_show" id="input-show" class="form-control">
                {% for key,variant in total_total_customer_group_discount_show_vars %} 
                <option value="{{ key }}"{% if total_total_customer_group_discount_show == key %} {{ "selected=\"selected\"" }}{% endif %}>{{ variant }}</option>
                {% endfor %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="total_total_customer_group_discount_status" id="input-status" class="form-control">
                {% if total_total_customer_group_discount_status %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_total_customer_group_discount_sort_order" value="{{ total_total_customer_group_discount_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
     
    </div>
  </div>
</div>
{{ footer }}