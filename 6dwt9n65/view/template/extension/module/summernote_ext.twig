{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
      	<button id="save_and_stay" data-toggle="tooltip" title="{{button_stay}}" class="btn btn-success"><i class="fa fa-save"></i></button>
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
		<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
    </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
         <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ edit_title }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
        <ul class="nav nav-tabs">
        	<li class="active"><a href="#tab-settings" data-toggle="tab"><span class="fa fa-cog"></span> {{ tab_settings }} </a></li>           
            <li><a href="#tab-about" data-toggle="tab"><span class="fa fa-support"></span> {{ tab_about }} </a></li>           
          </ul>           
          <div class="tab-content">
          <div class="tab-pane active" id="tab-settings">           
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">           
            <input type="hidden" name="module_summernote_ext_status" value="0" />
            <input type="checkbox" class="switcher" data-label-text="{{text_enabled}}" id="input-status" name="module_summernote_ext_status" {% if module_summernote_ext_status %}checked="checked"{% endif %} value="1" />            
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-cleaner">{{ entry_cleaner }}</label>
            <div class="col-sm-10">           
            <input type="hidden" name="module_summernote_ext_cleaner" value="0" />
            <input type="checkbox" class="switcher" data-label-text="{{text_enabled}}" id="input-cleaner" name="module_summernote_ext_cleaner" {% if module_summernote_ext_cleaner %}checked="checked"{% endif %} value="1" />            
            </div>            
          </div>
          <label class="col-sm-2 control-label"></label>
            <div class="notice"><i class="fa fa-info-circle"></i> {{ text_clean }}</div>
          <hr />          
		<div class="extension-list">{{ text_list }}</div>                   
        </div>        
       <div class="tab-pane" id="tab-about">
        <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_product_name }}</label>
            <div class="col-sm-10" style="margin-top: 9px;">
              {{ text_product }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_doc }}</label>
            <div class="col-sm-10" style="margin-top: 9px;">
              <a href="https://1drv.ms/w/s!Ap0ey4-_J5WJgsMIf3yX93551Ov5Aw" target="_blank">{{ text_doc }}</a>
            </div>
          </div>                 
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_market }}</label>
            <div class="col-sm-10" style="margin-top: 9px;">
              <a href="https://www.opencart.com/index.php?route=marketplace/extension&filter_member=Mika%20Design" target="_blank">{{ text_market }}</a>
              </div>
            </div>
            <div class="form-group">
            <label class="col-sm-2 control-label" for="button_support_email">{{entry_support}}</label>
            <div class="col-sm-2">
              <a href="{{support_url}}" class="btn btn-primary btn-block" target="_blank"><i class="fa fa-support"></i> {{button_support}}</a>
            </div>
          </div>
          <div class="form-group">         
          <div class="col-sm-10 iframe-container">
         <iframe src="https://support.mikadesign.co.uk/information/information-free.html" allowfullscreen></iframe>            	           
          </div>
         </div>        
        </div>
       </div>      
      <div class="col-sm-12 text-center copyright">			
      <p>Copyright &copy mikadesign.co.uk 2011 -
      <script type="text/javascript"><!-- 
      var curdate = new Date();
      var year = curdate.getFullYear();
      document.write(year + " ");
      // --></script>
      </p>
     </div>    
       </form>  
      </div>
    </div>
  </div>
</div>
<style>
.iframe-container {
  overflow: hidden;
  padding-top: 56.25%;
  margin-left: 20px;
  position: relative;
}
 
.iframe-container iframe {
   border: 0;
   height: 100%;
   left: 0;
   position: absolute;
   top: 0;
   width: 100%;
}
 
/* 4x3 Aspect Ratio */
.iframe-container-4x3 {
  padding-top: 75%;
}
</style>
<script type="text/javascript"><!--
//checkbox
  $(function () {    
    $(".switcher[type='checkbox").bootstrapSwitch({
        'onColor': 'success',
        'labelWidth': '50',
        'onText': '{{text_yes}}',
        'offText': '{{text_no}}',
    });
});
//save and stay
  $(document).on('click', '#save_and_stay', function(){
	$.ajax( {
	type: 'post',
	url: $('#form-module').attr('action') + '&save',
	data: $('#form-module').serialize(),
	beforeSend: function() {
		$('#form-module').fadeTo('slow', 0.5);
	},
	complete: function() {
		$('#form-module').fadeTo('slow', 1);
	},
	success: function( response ) {
		console.log( response );
	}
  });
});
//--></script>
{{ footer }}