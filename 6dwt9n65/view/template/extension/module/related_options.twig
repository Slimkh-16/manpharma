{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
					{{ help_instructions }}
					<h2>{{ text_settings }}</h2>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ text_price }}<span class="help">{{ help_price }}</span></label>
						<div class="col-sm-10">
							<select class="form-control" name="module_related_options[price_adjustment_on]">
								{%  if module_related_options['price_adjustment_on'] %}
								<option value="1" selected="selected">{{ text_yes }}</option>
								<option value="0">{{ text_no }}</option>
								{%  else %}
								<option value="1">{{ text_yes }}</option>
								<option value="0" selected="selected">{{ text_no }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group" id="animate_price" {%  if module_related_options['price_adjustment_on'] %} style="display: none;" {% endif %}>
						<label class="col-sm-2 control-label" for="input-status">{{ text_animate_price }}</label>
						<div class="col-sm-10">
							<select class="form-control" name="module_related_options[animate_price]">
								{% if module_related_options['animate_price'] %}
								<option value="1" selected="selected">{{ text_yes }}</option>
								<option value="0">{{ text_no }}</option>
								{% else %}
								<option value="1">{{ text_yes }}</option>
								<option value="0" selected="selected">{{ text_no }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ text_residue }}</label>
						<div class="col-sm-10">
								<select class="form-control" name="module_related_options[residue_on]">
									{% if module_related_options['residue_on'] %}
									<option value="1" selected="selected">{{ text_yes }}</option>
									<option value="0">{{ text_no }}</option>
									{% else %}
									<option value="1">{{ text_yes }}</option>
									<option value="0" selected="selected">{{ text_no }}</option>
									{% endif %}
								</select>
						</div>
					</div>
					<div class="form-group" id="show_disabled" {% if module_related_options['residue_on'] %} style="display: none" {% endif %}>
						<label class="col-sm-2 control-label" for="input-status">{{ text_show_disabled }}</label>

						<div class="col-sm-10">
							<select class="form-control" name="module_related_options[show_disabled]">
								{% if module_related_options['show_disabled'] %}
								<option value="1" selected="selected">{{ text_yes }}</option>
								<option value="0">{{ text_no }}</option>
								{% else %}
								<option value="1">{{ text_yes }}</option>
								<option value="0" selected="selected">{{ text_no }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ decimal_places }}<span class="help">{{ help_decimal_places }}</span></label>
						<div class="col-sm-10">
							<input type="text" name="module_related_options[price_residue]" value="{{ module_related_options['price_residue'] }}" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<script>
    $('select[name="module_related_options[price_adjustment_on]"]').on('change', function(){
        if ($(this).val()==1) {
            $('#animate_price').show()
        } else {
            $('#animate_price').hide()
        }
    });
    $('select[name="module_related_options[residue_on]"]').on('change', function(){
        if ($(this).val()==1) {
            $('#show_disabled').show()
        } else {
            $('#show_disabled').hide()
        }
    });
</script>
