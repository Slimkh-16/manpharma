{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">{% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ form_action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-code">{{ entry_code }}</label>
            <div class="col-sm-10">
              <input class="form-control" id="input-code" type="text" name="code" value="{{ code }}" placeholder="module_emailtemplate" />
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-cycle">{{ entry_cycle }}</label>
            <div class="col-sm-10">
              <select name="cycle" id="input-cycle" class="form-control">
                <option value="hour"{{ cycle == 'hour' ? ' selected="selected"' : '' }}>{{ text_hour }}</option>
                <option value="day"{{ cycle == 'day' ? ' selected="selected"' : '' }}>{{ text_day }}</option>
                <option value="week"{{ cycle == 'week' ? ' selected="selected"' : '' }}>{{ text_week }}</option>
                <option value="month"{{ cycle == 'month' ? ' selected="selected"' : '' }}>{{ text_month }}</option>
                <option value="year"{{ cycle == 'year' ? ' selected="selected"' : '' }}>{{ text_year }}</option>
              </select>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-action">{{ entry_action }}</label>
            <div class="col-sm-10">
              <input class="form-control" id="input-action" type="text" name="action" value="{{ action }}" placeholder="extension/module/emailtemplate/cron" />
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-default danger {{ status == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_disabled }}">
                  <input type="radio" name="status" value="0" {{ status == 0 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-times"></i>
                </label>
                <label class="btn btn-default success {{ status == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_enabled }}">
                  <input type="radio" name="status" value="1" {{ status == 1 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-check"></i>
                </label>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
